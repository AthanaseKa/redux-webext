{
  "name": "redux-ext",
  "version": "1.0.0",
  "description": "Package for simplifying work with i18n in Web Extensions",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest && coveralls < coverage/lcov.info",
    "lint": "eslint src tests",
    "build": "babel src -d lib",
    "build:watch": "npm run build -- -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivantsov/redux-ext.git"
  },
  "keywords": [
    "redux",
    "store",
    "state",
    "web-extension",
    "extension",
    "webext",
    "chrome",
    "firefox"
  ],
  "author": "Alexander Ivantsov <alexivantsov@ya.ru> (https://github.com/ivantsov)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ivantsov/redux-ext/issues"
  },
  "homepage": "https://github.com/ivantsov/redux-ext#readme",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "coveralls": "^2.11.12",
    "eslint": "^3.5.0",
    "eslint-config-airbnb-base": "^5.0.3",
    "eslint-plugin-import": "^1.14.0",
    "jest": "^15.1.1"
  },
  "jest": {
    "testRegex": "tests/.*.js$",
    "testPathIgnorePatterns": [
      "fixtures"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "tests"
    ]
  }
}
